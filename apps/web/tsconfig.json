{
  "extends": "@yoshinani/style-guide/typescript/nextjs",
  "compilerOptions": {
    "paths": {
      "@repo/*": ["../../packages/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "postcss.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
